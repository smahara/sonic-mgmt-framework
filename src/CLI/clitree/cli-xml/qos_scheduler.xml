<CLISH_MODULE
    xmlns="http://www.dellemc.com/sonic/XMLSchema"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:xi="http://www.w3.org/2001/XInclude"
    xsi:schemaLocation="http://www.dellemc.com/sonic/XMLSchema
    http://www.dellemc.com/sonic/XMLSchema/clish.xsd"
    >
  <VIEW name="configure-view">
    <!-- scheduler policy -->
    <COMMAND
        name="scheduler-policy"
        help="Scheduler Policy Configuration"
        mode="subcommand"
        ptype="SUBCOMMAND"
        view="configure-qos-scheduler-policy-view"
        viewid="scheduler_policy_name=${name}"
        >
        <PARAM
           name="name"
           help="Name of the scheduler policy"
           ptype="STRING_32"
           >
        </PARAM>
        <ACTION>
            python $SONIC_CLI_ROOT/sonic-cli-qos-scheduler.py patch_openconfig_qos_qos_scheduler_policies_scheduler_policy ${name}
        </ACTION>
    </COMMAND>

    <!-- no scheduler policy -->
    <COMMAND name="no scheduler policy" help="Unconfigure a scheduler policy">
      <PARAM name="name" help="Name of the scheduler policy" ptype="STRING_32"> </PARAM>
        <ACTION> 
            python $SONIC_CLI_ROOT/sonic-cli-qos-scheduler.py delete_openconfig_qos_qos_scheduler_policies_scheduler_policy ${name}
        </ACTION>
    </COMMAND>
  </VIEW>


  <VIEW
    name="configure-qos-scheduler-policy-view"
    prompt="${SYSTEM_NAME}(conf-sched-policy-${scheduler_policy_name})# "
    depth="2"
    >
    <!-- Inheritance -->
    <NAMESPACE
        ref="configure-view"
        help="false"
        completion="false"
        />

    <COMMAND
            name="scheduler"
            help="scheduler for each queue"
            mode="subcommand"
            ptype="SUBCOMMAND"
            view="configure-qos-scheduler-policy-per-queue-view"
            viewid="top_scheduler_policy_name=${scheduler_policy_name};scheduler_policy_per_queue_name=${sequence}; "
        >
        <PARAM
            name="sequence"
            help="Queue id: 0, 1, .. etc"
            ptype="UINT">
        </PARAM>
        <ACTION>
            python $SONIC_CLI_ROOT/sonic-cli-qos-scheduler.py patch_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler ${scheduler_policy_name} ${sequence}
        </ACTION>
    </COMMAND>

    <!-- no queue id-->
    <COMMAND name="no scheduler " help="Unconfigure a queue scheduler ">
      <PARAM name="sequence" help="Queue id" ptype="UINT"> </PARAM>
        <ACTION> 
            python $SONIC_CLI_ROOT/sonic-cli-qos-scheduler.py delete_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler ${scheduler_policy_name} ${sequence}
        </ACTION>
    </COMMAND>
  </VIEW>


  <VIEW
    name="configure-qos-scheduler-policy-per-queue-view"
    prompt="${SYSTEM_NAME}(conf-scheduler-${top_scheduler_policy_name}-${scheduler_policy_per_queue_name})# "
    depth="3"
    >
    <!-- Inheritance -->
    <NAMESPACE
        ref="configure-view"
        help="false"
        completion="false"
        />
        <COMMAND
            name="priority"
            help="scheduler is set to strict priority"
            mode="subcommand"
            ptype="SUBCOMMAND"
        >
        <ACTION>
            python $SONIC_CLI_ROOT/sonic-cli-qos-scheduler.py patch_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_config_priority ${top_scheduler_policy_name} ${scheduler_policy_per_queue_name}  
        </ACTION>
        </COMMAND>

        <COMMAND
            name="no priority"
            help="scheduler is set to WRR"
            mode="subcommand"
            ptype="SUBCOMMAND"
        >
        <ACTION>
            python $SONIC_CLI_ROOT/sonic-cli-qos-scheduler.py delete_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_config_priority ${top_scheduler_policy_name} ${scheduler_policy_per_queue_name}  
        </ACTION>
        </COMMAND>

        <COMMAND
            name="weight"
            help="weight of WRR"
        >
        <PARAM
            name="weight"
            help="weight of WRR"
            ptype="UINT"
            >
        </PARAM>
        <ACTION>
            python $SONIC_CLI_ROOT/sonic-cli-qos-scheduler.py patch_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_config_weight ${top_scheduler_policy_name} ${scheduler_policy_per_queue_name} ${weight}
        </ACTION>
        </COMMAND>


        <COMMAND
            name="min"
            help="mininum rate "
        >
        <PARAM
            name="cir"
            help="minimum rate"
            ptype="UINT"
            >
        </PARAM>
        <ACTION>
            python $SONIC_CLI_ROOT/sonic-cli-qos-scheduler.py patch_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_two_rate_three_color_config_cir ${top_scheduler_policy_name} ${scheduler_policy_per_queue_name} ${cir}
        </ACTION>
        </COMMAND>


        <COMMAND
            name="min-burst"
            help="minimum burst "
        >
        <PARAM
            name="bc"
            help="minimum burst"
            ptype="UINT"
            >
        </PARAM>
        <ACTION>
            python $SONIC_CLI_ROOT/sonic-cli-qos-scheduler.py patch_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_two_rate_three_color_config_bc ${top_scheduler_policy_name} ${scheduler_policy_per_queue_name} ${bc}
        </ACTION>
        </COMMAND>


        <COMMAND
            name="max"
            help="maxinum rate "
        >
        <PARAM
            name="pir"
            help="maximum rate"
            ptype="UINT"
            >
        </PARAM>
        <ACTION>
            python $SONIC_CLI_ROOT/sonic-cli-qos-scheduler.py patch_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_two_rate_three_color_config_pir ${top_scheduler_policy_name} ${scheduler_policy_per_queue_name} ${pir}
        </ACTION>
        </COMMAND>


        <COMMAND
            name="max-burst"
            help="maximum burst "
        >
        <PARAM
            name="be"
            help="maximum burst"
            ptype="UINT"
            >
        </PARAM>
        <ACTION>
            python $SONIC_CLI_ROOT/sonic-cli-qos-scheduler.py patch_openconfig_qos_qos_scheduler_policies_scheduler_policy_schedulers_scheduler_two_rate_three_color_config_be ${top_scheduler_policy_name} ${scheduler_policy_per_queue_name} ${be}
        </ACTION>
        </COMMAND>
  </VIEW>



  <VIEW name="enable-view">
    <COMMAND name="show scheduler-policy" help="Show scheduler policy information">
        <PARAM 
            name="name"
            help="name of scheduler policy"
            ptype="SUBCOMMAND"
            mode="subcommand"
            >
        </PARAM>
        <ACTION>
            python $SONIC_CLI_ROOT/sonic-cli-qos-scheduler.py get_openconfig_qos_qos_scheduler_policies_scheduler_policy_config ${name}
        </ACTION>
    </COMMAND>
  </VIEW>
 </CLISH_MODULE>
